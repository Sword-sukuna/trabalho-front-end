import javax.servlet.*;
import javax.servlet.http.*;
import java.io.*;

public class CantinaServlet extends HttpServlet {
    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        // Configurações iniciais
        String nomeCantina = "Cantina da Escola";
        int salgados = 20;
        double precoSalgado = 5.0;

        // Atualizando o número de salgados e calculando a venda
        salgados -= 5;
        double totalVendido = 5 * precoSalgado;

        // Definindo os atributos para serem usados na página HTML
        request.setAttribute("nomeCantina", nomeCantina);
        request.setAttribute("salgados", salgados);
        request.setAttribute("precoSalgado", precoSalgado);
        request.setAttribute("totalVendido", totalVendido);

        // Encaminhando para o JSP (página HTML gerada dinamicamente)
        RequestDispatcher dispatcher = request.getRequestDispatcher("index.jsp");
        dispatcher.forward(request, response);
    }
}
